@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mb-3">
    <h1 class="col-6 my-auto">Customers</h1>
    <div class="col-6 my-auto text-right">@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })</div>
</div>

<div class="row">
    @{
        <table id="customers" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="align-middle">#</th>
                    <th scope="col" class="align-middle">Customers</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    }
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable({
                "bLengthChange": false,
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function(data) {
                            return data;
                        }
                    },
                    {
                        data: "name",
                        render: function(data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "' class='btn btn-link'>" + data + "</a>";
                        }
                    },
                    {
                        date: "id",
                        render: function(data) {
                            return "<button class='btn btn-link js-delete' data-customer='" + data + "'>Delete</button>"
                        }
                    }
                ]
        });

            $("#customers").on("click", ".js-delete",
                function () {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        console.log("Success");
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}
