@model  Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleasedDate.ToString("dd/MM/yyyy")</li>
    <li>Added Date: @Model.AddedDate.ToString("dd/MM/yyyy")</li>
    <li>Stock: @Model.Stock</li>
</ul>